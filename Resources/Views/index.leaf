#extend("base")
#export("body") {

  <div class="row">
    <div class="u-full-width">
      <h4>Add New Acronym</h4>
    </div>
  </div>

  <form action="/til" method="post">
    <div class="row">
      <div class="three columns">
        <label>Acronym</label>
        <input name="short" type="text" class="u-full-width" placeholder="short form e.g. FTW" />
      </div>
      <div class="nine columns">
        <label>Long Form</label>
        <input name="long" type="text" class="u-full-width" placeholder="long form e.g. For The Win" />
      </div>
      <input class="button-primary" type="submit" value="Save Acronym">
    </div>
  </form>



  #loop(acronyms, "acronym") {
<div class="row">
  <div class="three columns">
    <h5><span>#(acronym.short)</span></h5>
  </div>
  <div class="six columns">
    <p><span>#(acronym.long)</span></p>
  </div>

  <div class="three columns">
    <form action="/til/#(acronym.id)/delete" method="post">
      <input type="submit" value="Delete">
    </form>
  </div>
</div>
}
}
